@using Codigo_examen.Models.ViewModel
@model CreateUsuarioViewModel
<section class="create-card card-decoration">
    <form asp-action="CrearUsuario" asp-controller="Home" method="post" class="create-body container">
        <h3 class="card-title text-center row">Registrate a la aplicacion</h3>
        <div class="row my-2">
            <div class="form-group col">
                <label for="InputName">Nombre</label>
                <input asp-for="NombreUsuario" type="text" class="form-control" id="InputName" placeholder="Escriba su nombre">
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label for="InputLastName">Apellido Paterno</label>
                <input asp-for="ApellidoPaterno" type="text" class="form-control" id="InputLastName" placeholder="Escriba su apellido paterno">
                <span asp-validation-for="ApellidoPaterno" class="text-danger"></span>
            </div>
            <div class="form-group col">
                <label for="InputLastName1">Apellido Materno</label>
                <input asp-for="ApellidoMaterno" type="text" class="form-control" id="InputLastName1" placeholder="Escriba su apellido materno">
                <span asp-validation-for="ApellidoMaterno" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <h4 class="card-title row">Escriba su direccion</h4>
            <div class="col-6 col-xsm-12">
                <div class="form-group">
                    <label for="InputStreet">Calle</label>
                    <input asp-for="Calle" type="text" class="form-control" id="InputStreet" placeholder="Escriba su calle">
                    <span asp-validation-for="Calle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="InputExNumber">Numero Exterior</label>
                    <input asp-for="NumeroExterior" type="number" max="999" min="1" class="form-control" id="InputExNumber" placeholder="Escriba su numero exterior">
                    <span asp-validation-for="NumeroExterior" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="InputSuburb">Colonia</label>
                    <input asp-for="Colonia" type="text" class="form-control" id="InputSuburb" placeholder="Escriba su colonia">
                    <span asp-validation-for="Colonia" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="InputPostalCode">Codigo Postal</label>
                    <input asp-for="CodigoPostal" type="number" min="1000" max="99999" class="form-control" id="InputPostalCode" placeholder="Escriba su codigo postal">
                    <span asp-validation-for="CodigoPostal" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="InputCity">Municipio</label>
                    <input asp-for="Municipio" type="text" class="form-control" id="InputCity" placeholder="Escriba su municipio">
                    <span asp-validation-for="Municipio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="InputState">Estado</label>
                    <input asp-for="Estado" type="text" class="form-control" id="InputState" placeholder="Escriba su Estado">
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>
            <div class="col-6 col-xsm-12">
                <div class="form-group">
                    <label for="InputEmail">Correo electronico</label>
                    <input asp-for="Email" type="email" class="form-control" id="InputEmail" placeholder="Escriba su correo electronico">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="InputContrasena">Contraseña</label>
                    <input asp-for="Contrasena" type="password" class="form-control" id="InputContrasena" placeholder="Escriba su Contraseña">
                    <span asp-validation-for="Contrasena" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="InputContrasena1">Repita su contraseña</label>
                    <input asp-for="ConfirmacionContraseña" type="password" class="form-control" id="InputContrasena1" placeholder="Repita su contraseña">
                    <span asp-validation-for="ConfirmacionContraseña" class="text-danger"></span>
                </div>
                <div class="d-flex flex-column justify-content-center align-content-center gap-3">
                    <button type="submit" class="btn btn-primary mt-3">Registrar datos</button>
                    <div asp-validation-summary="ModelOnly" class="sumary-errors"></div>
                </div>
            </div>
        </div>
    </form>
</section>